@model Orchard.Core.Common.OwnerEditor.OwnerEditorViewModel
@{
	var OwnerEditor = Model;
}
<fieldset>
    @Html.LabelFor(m => OwnerEditor.Owner, T("Owner"))
    @if (ViewData.ContainsKey("ExtendedUsers")) {
        @Html.DropDownListFor(m => OwnerEditor.Owner, (SelectList) ViewData["ExtendedUsers"])
    }
    else {
        @Html.EditorFor(m => OwnerEditor.Owner)
    }

    @Html.ValidationMessageFor(m => OwnerEditor.Owner)

    @Html.ActionLink("Quick Add User", "Create", new { Controller = "QuickUserAdmin", Area = "Outercurve.Projects", returnUrl = Context.Request.RawUrl }, new {@class = "button primaryAction"})
</fieldset>
